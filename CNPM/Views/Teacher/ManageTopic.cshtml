@section scripts                    {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#topicTable").DataTable({
                "ajax": {
                    "url": "@Url.Action("GetTopics", "Teacher", new { id = ViewBag.courseID })",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "id" },
                    { "data": "name" },
                    { "data": "description" },
                    {
                        "data": (row, type, val, meta) =>
                            row.file_detail == null ? "" :
                            `<a href="@Url.Action("Detail", "Utils", null, Request.Url.Scheme)?file=${row.file_detail}" target="_blank">${row.file_detail}</a>`
                    },
                    {
                        "data": "id",
                        "render": function (data) {
                            return "<a style='color: white' class='btn btn-info btn-sm' onclick=PopupForm('@Url.Action("EditTopic","Teacher")/"+ data +"')><i class='fa fa-pencil'></i> Sửa</a><a class='btn btn-danger btn-sm' style='margin-left: 5px; color: white' onclick=Delete('@Url.Action("DeleteTopic","Teacher")/"+ data +"') ><i class='fa fa-trash'></i> Xóa</a>";
                        },
                        "orderable": false,
                        "width": "140px",
                        "searchable": false
                    }

                ],
                "language": {
                    "sProcessing": "Đang xử lý...",
                    "sLengthMenu": "Xem _MENU_ mục",
                    "sZeroRecords": "Không tìm thấy kết quả phù hợp",
                    "sEmptyTable": "Không có dữ liệu trong bảng",
                    "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                    "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                    "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                    "sSearch": "Tìm kiếm:",
                    "oPaginate": {
                        "sFirst": "Đầu tiên",
                        "sLast": "Cuối cùng",
                        "sNext": "Sau",
                        "sPrevious": "Trước"
                    },

                }
            });
        });
        function PopupForm(url) {
            var formDiv = $('<div/>')

            $.ajax({
                url: url,
                success: function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        draggable: false,
                        title: 'Điền thông tin đề tài',
                        height: 450,
                        width: 450,
                        modal: true,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        },
                    });
                }
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                var fileUpload = $("#file_detail").get(0);
                var files = fileUpload.files;
                var data = new FormData();

                for (var i = 0; i < files.length; i++) {
                    data.append("file_detail", files[i]);
                }

                //Add the input element values
                data.append("id", $("#id").val());
                data.append("course_id", $("#course_id").val());
                data.append("name", $("#name").val());
                data.append("description", $("#description").val());
                data.append("check", $('.span-file-name-detail').text());
                $.ajax({
                    type: "POST",
                    url: form.action,
                    contentType: false,
                    processData: false,
                    data: data,
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            toastr.options = {
                                "closeButton": false,
                                "debug": false,
                                "newestOnTop": false,
                                "progressBar": true,
                                "positionClass": "toast-top-right",
                                "preventDuplicates": false,
                                "onclick": null,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            }
                            toastr["success"](data.message)

                        }
                        else {
                            Popup.dialog('close');
                            alert("Đã có lỗi xảy ra");
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) { Popup.dialog('close'); alert("Lỗi không xác định"); }
                });
            }
            return false;
        }

        function Delete(url) {
            bootbox.confirm({
                title: "Xóa đề tài",
                message: "Bạn có chắc chắn muốn xóa đề tài này không?",
                buttons: {
                    cancel: {
                        label: '<i class="fa fa-times"></i> Hủy bỏ'
                    },
                    confirm: {
                        label: '<i class="fa fa-check"></i> Đồng ý'
                    }
                },
                callback: function (result) {
                    if (result) {
                        $.ajax({
                            type: "POST",
                            url: url,
                            success: function (response) {
                                if (response.success) {
                                    dataTable.ajax.reload();
                                    toastr.options = {
                                        "closeButton": false,
                                        "debug": false,
                                        "newestOnTop": false,
                                        "progressBar": true,
                                        "positionClass": "toast-top-right",
                                        "preventDuplicates": false,
                                        "onclick": null,
                                        "showDuration": "300",
                                        "hideDuration": "1000",
                                        "timeOut": "5000",
                                        "extendedTimeOut": "1000",
                                        "showEasing": "swing",
                                        "hideEasing": "linear",
                                        "showMethod": "fadeIn",
                                        "hideMethod": "fadeOut"
                                    }
                                    toastr["success"](response.message);
                                }
                                else {
                                    toastr.options = {
                                        "closeButton": false,
                                        "debug": false,
                                        "newestOnTop": false,
                                        "progressBar": false,
                                        "positionClass": "toast-top-right",
                                        "preventDuplicates": false,
                                        "onclick": null,
                                        "showDuration": "300",
                                        "hideDuration": "1000",
                                        "timeOut": "5000",
                                        "extendedTimeOut": "1000",
                                        "showEasing": "swing",
                                        "hideEasing": "linear",
                                        "showMethod": "fadeIn",
                                        "hideMethod": "fadeOut"
                                    }
                                    toastr["error"](response.message);
                                }

                            }
                        });
                    }
                }
            });
        }

    </script>
}


